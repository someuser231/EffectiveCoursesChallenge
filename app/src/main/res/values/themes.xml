<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ECC" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.ECC.Title">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Theme.ECC.ActiveText">
        <item name="android:textColor">@color/green</item>
        <item name="android:fontFamily">@font/roboto_semibold</item>
    </style>

    <style name="Theme.ECC.Background">
        <item name="android:background">@color/dark</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="Theme.ECC.InputField">
        <item name="android:background">@drawable/shape_rect_full_rounded</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColorHint">@color/white_opacity50</item>
    </style>

    <style name="Theme.ECC.InputField.SignIn">
        <item name="android:backgroundTint">@color/light_gray</item>
    </style>
    <style name="Theme.ECC.InputField.Home">
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:padding">19dp</item>
    </style>

    <style name="Theme.ECC.Button">
        <item name="android:background">@drawable/shape_rect_full_rounded</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Theme.ECC.Button.OK">
        <item name="android:background">@drawable/shape_ok_button</item>
        <item name="android:backgroundTint" />
    </style>

    <style name="Theme.ECC.NavBar">
        <item name="backgroundTint">@color/dark_gray</item>
        <item name="fontFamily">@font/roboto_semibold</item>
        <item name="itemTextAppearanceActive">@style/NavBarActive</item>
        <item name="itemTextAppearanceInactive">@style/NavBarNormal</item>
    </style>

    <style name="NavBarActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NavBarNormal" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
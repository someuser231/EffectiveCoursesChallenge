<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFrg"
    style="@style/Theme.ECC.Background"
    android:paddingBottom="0dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                style="@style/Theme.ECC.InputField.Home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/icon_search"
                android:drawablePadding="16dp"
                android:hint="@string/search_courses"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/ibtn_filter"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:maxLines="1"
                />
            <ImageButton
                android:id="@+id/ibtn_filter"
                android:background="@drawable/shape_oval"
                android:backgroundTint="@color/dark_gray"
                android:layout_width="62dp"
                android:layout_height="62dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/icon_funnel"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/Theme.ECC.ActiveText"
            android:id="@+id/txt_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/by_publish_date"
            android:fontFamily="@font/roboto_medium"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            app:drawableEndCompat="@drawable/icon_arrow_down_up"
            android:drawablePadding="4dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>